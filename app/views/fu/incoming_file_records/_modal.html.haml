.modal-header
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
  .modal-body
    - if flag == 'fault'
      %table.table.datatable
        %thead
          %tr
            %th Fault Code
            %th Fault Subcode
            %th Fault Reason
        %tbody
          %tr
            %td
              = fault.fault_code
            %td
              = fault.fault_subcode
            %td
              = fault.fault_reason
    - elsif flag == 'record'
      %table.table.datatable
        %thead
          %tr
            %th Request
        %tbody
          %tr
            %td
              = fault.record_txt
    - elsif flag == 'fault_bitstream'
      %table.table.datatable
        %thead
          %tr
            %th Fault Bitstream
        %tbody
          %tr
            %td
              = fault.fault_bitstream